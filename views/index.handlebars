{{!-- set up template that Handlebars can render onto --}}
{{!-- create a button to submit user input into database --}}

<img src="/bobsBurgers.jpeg" alt="Burger" style="width:80%;height:auto;">

<h1>Burgers!</h1>

<div class="w3-row">
    <h2>Burgers on our menu:</h2>

    <div class="w3-half w3-container w3-green">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <h2>Devoured!</h2>
    <div class="w3-half w3-container w3-green"></div>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>